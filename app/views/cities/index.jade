extends ../layouts/default

block main

block content

	.content

		h2 Diagrama do estado do mapa

		- if (typeof(cities) == 'undefined') 
			p Não há cidades!!


		- if (cities) 
			div
				table(class="table table-hover")
					thead
						tr
							th Estado
							th Cidade
							th.text-center Válidas
							th.text-center Tortuosas
							th.text-center Desconhecidas
					tbody
						- each city in cities
							tr
								td
										=city.uf
								td
										=city.name
								td.text-center
										=city.stats.totalConnected
								td.text-center
										=city.stats.totalTortuosas
								td.text-center
										=city.stats.totalInexistent