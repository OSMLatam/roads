extends ../layouts/default

block head

block main
  h2.text-center b5500

block content

  - if (cities.lenght > 0) 
    p
      a(type='button', class='btn-sm btn-primary', href='/cidades/popular', title='Popular banco de dados') Não há dados, popular agora!
  - else
    table(class="table table-condensed")
      thead
        tr
          th Cidade
          th Situação
      tbody
        - each city in cities
          tr 
            td
              a(href='cidades/'+city.ibge_id title='Ver detalhes desta cidade')=city.name
            td=city.isCapital